extends layout

block content
  .page-header
    h3 My Account
  form.form-horizontal(method="POST" role="form" action="/user/account")
    .form-group
      label.col-sm-2(for="name" control-label) Name
      .col-sm-8
        input#first_name.form-control(type="text" name="name" placeholder="first name" value="#{user.profile.name || ''}")
    .form-group
      label.col-sm-2(for="email" control-label) Email
      .col-sm-8
        input#email.form-control(type="text" name="email" placeholder="joe@doe.com" value="#{user.email || ''}")
    .form-group
      label.col-sm-2(for="pubKey" control-label) Public Key
      .col-sm-8
        textarea#pubKey.form-control(name="pubKey" rows=10)
          | #{user.pubKey || ''}
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type="submit")
          i.fa.fa-lock
          | Update
  
  .page-header
    h3 Linked Accounts
    
  .form-horizontal
    .form-group.providers
      .col-sm-6
        p
          if providers.instagram
            a.btn.btn-block.btn-primary.btn-social.btn-instagram(href='/user/account/unlink/instagram')
              i.fa.btn-xs.fa-instagram
              | Unlink your Instagram account
          else
            a.btn.btn-block.btn-default.btn-social.btn-instagram(href='/auth/o/instagram')
              i.fa.btn-xs.fa-instagram
              | Link your Instagram account
      .col-sm-6
        p
          if providers.google
            a.btn.btn-block.btn-primary.btn-social.btn-google(href='/user/account/unlink/google')
              i.fa.btn-xs.fa-google
              | Unlink your Google account
          else
            a.btn.btn-block.btn-default.btn-social.btn-google(href='/auth/o/google')
              i.fa.btn-xs.fa-google
              | Link your Google account
      .col-sm-6
        p
          if providers.facebook
            a.btn.btn-block.btn-primary.btn-social.btn-facebook(href='/user/account/unlink/facebook')
              i.fa.btn-xs.fa-facebook
              | Unlink your Facebook account
          else
            a.btn.btn-block.btn-default.btn-social.btn-facebook(href='/auth/o/facebook')
              i.fa.btn-xs.fa-facebook
              | Link your Facebook account
      .col-sm-6
        p
          if providers.twitter
            a.btn.btn-block.btn-primary.btn-social.btn-twitter(href='/user/account/unlink/twitter')
              i.fa.btn-xs.fa-twitter
              | Unlink your Twitter account
          else
            a.btn.btn-block.btn-default.btn-social.btn-twitter(href='/auth/o/twitter')
              i.fa.btn-xs.fa-twitter
              | Link your Twitter account
      .col-sm-6
        p
          if providers.github
            a.btn.btn-block.btn-primary.btn-social.btn-github(href='/user/account/unlink/github')
              i.fa.btn-xs.fa-github
              | Unlink your Github account
          else
            a.btn.btn-block.btn-default.btn-social.btn-twitter(href='/auth/o/github')
              i.fa.btn-xs.fa-github
              | Link your Github account
              
